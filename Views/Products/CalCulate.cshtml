@model ComputerStoreClassLib.Model.Product

@{
    ViewBag.Title = "CalCulate";
}
    <div class="jumbotron">
        <h2>Калькулятор</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Product</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                <div class="form-group">
                    <label class="control-label col-md-2">Название товара</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Products", null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Операционная система</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.OperationSystemId, ViewBag.OperationSystems as SelectList, "please select item", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Категория</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as SelectList, "please select item", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Фирма поставщик</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SupplerCompanyId, ViewBag.SupplerCompanies as SelectList, "please select item", new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-2">Количество товаров</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CountAll, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CountAll, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Calculate" class="btn btn-info" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
