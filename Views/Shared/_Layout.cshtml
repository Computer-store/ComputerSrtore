<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Coomputer Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                    <li>@Html.ActionLink("История магазина", "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">User int<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            
                            <li>@Html.ActionLink("Контактная информация","Contact","Home")</li>
                            <li>@Html.ActionLink("Каталог товаров","GetAllProducts","Products")</li>
                            <li>@Html.ActionLink("Корзина","Index","Basket")</li>
                            <li>@Html.ActionLink("Оформление заказа","Check","Orders")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Root int<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Категории товаров","Index","Categories")</li>
                            <li>@Html.ActionLink("Фирмы поставщики","Index","SupplerCompanies")</li>
                            <li>@Html.ActionLink("Операционные системы","Index","OperationSystems")</li>
                            <li>@Html.ActionLink("Способы доставки","Index","DeliveryMethods")</li>
                            <li>@Html.ActionLink("Способы оплаты","Index","PayMethods")</li>
                            <li>@Html.ActionLink("Состояния заказа","Index","OrderStates")</li>
                            <li>@Html.ActionLink("Товары","Index","Products")</li>
                            <li>@Html.ActionLink("Пользователи","Index","Users")</li>
                            <li>@Html.ActionLink("Роли","Index","Role")</li>
                            <li>@Html.ActionLink("Заказы","Index","Orders")</li>
                        </ul>
                    </li>
                    @Html.Partial("PrCount")
                </ul>

                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Магазин компьютерной техники</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
